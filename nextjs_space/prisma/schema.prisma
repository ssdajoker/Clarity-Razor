generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/clarity-razor/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  accounts      Account[]
  sessions      Session[]
  tiles         Tile[]
  files         File[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Tile {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  mode      String   // Razor, Backcast, Drill, Connection Hunt, DeepAgent Task Spec
  rawInput  Json     // {objective, constraints, context_dump}
  tileJson  Json     // LLM-generated structured output
  tags      String[] @default([])
  files     File[]

  @@index([userId])
  @@index([createdAt])
}

model File {
  id                 String    @id @default(cuid())
  userId             String
  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tileId             String?
  tile               Tile?     @relation(fields: [tileId], references: [id], onDelete: Cascade)
  fileName           String
  originalName       String
  fileSize           Int
  mimeType           String
  cloud_storage_path String
  isPublic           Boolean   @default(false)
  // Security fields
  fileHash           String?   // SHA-256 hash for integrity
  encrypted          Boolean   @default(false)
  encryptionKey      String?   // Encrypted with user's master key
  deleteAfterUse     Boolean   @default(false)
  expiresAt          DateTime? // Auto-delete timestamp
  accessCount        Int       @default(0)
  lastAccessedAt     DateTime?
  createdAt          DateTime  @default(now())
  auditLogs          FileAuditLog[]

  @@index([userId])
  @@index([tileId])
  @@index([expiresAt])
}

model FileAuditLog {
  id        String   @id @default(cuid())
  fileId    String
  file      File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  userId    String
  action    String   // UPLOAD, ACCESS, DELETE, DOWNLOAD
  metadata  Json?    // Additional context
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([fileId])
  @@index([userId])
  @@index([createdAt])
}
